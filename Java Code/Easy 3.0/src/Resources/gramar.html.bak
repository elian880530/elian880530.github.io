 <span class="gramar"><strong>Easy Gramar in Backus&ndash;Naur Form (BNF)</strong><br />
 <br />
 <strong>&lt;program&gt;</strong> ::= </span><span class="kyewords">program</span><span class="gramar"> id;<strong> &lt;var&gt; &lt;body&gt;</strong><br />
 <strong>&lt;var&gt;</strong> ::= [</span><span class="kyewords">var</span><span class="gramar"> <strong>&lt;declarations&gt;</strong>]<br />
 <strong>&lt;declarations&gt;</strong> ::= [<strong>&lt;declaration&gt; &lt;declarations&gt;</strong>]<br />
 <strong>&lt;declaration&gt;</strong> ::= <strong>&lt;variables&gt;</strong> : <strong>&lt;type&gt;</strong>;<br />
 <strong>&lt;variables&gt;</strong> ::= id <strong>&lt;others_variables&gt;</strong><br />
 <strong>&lt;others_variables&gt;</strong> ::= [, <strong>&lt;variables&gt;</strong>]<br />
 <strong>&lt;type&gt;</strong> ::= </span><span class="kyewords">int</span><span class="gramar"> | </span><span class="kyewords">float</span><span class="gramar"> | <span class="kyewords">bool</span><br />
 <strong>&lt;body&gt;</strong> ::= <strong>&lt;instructions_block&gt;</strong><br />
 <strong>&lt;instructions_block&gt;</strong> :== </span><span class="kyewords">begin</span><span class="gramar"> <strong>&lt;instructions_list&gt;</strong> </span><span class="kyewords">end</span><span class="gramar"><br />
 <strong>&lt;instructions_list&gt;</strong> ::= [<strong>&lt;single_instruction&gt; &lt;instructions_list&gt;</strong>]<br />
 <strong>&lt;single_instruction&gt;</strong> ::=<strong> &lt;read&gt;</strong> | <strong>&lt;write&gt;</strong> | <strong>&lt;assignment&gt;</strong> | <strong>&lt;if_then_else&gt;</strong> | <strong>&lt;while_do&gt;</strong> | ; <br />
 <strong>&lt;read&gt;</strong> ::= </span><span class="kyewords">read</span><span class="gramar"> id;<br />
 <strong>&lt;write&gt;</strong> ::= </span><span class="kyewords">write</span><span class="gramar"> <strong>&lt;expression&gt;</strong>;<br />
 <strong>&lt;assignment&gt;</strong> ::= id = <strong>&lt;expression&gt;</strong>;<br />
 <strong>&lt;expression&gt;</strong> ::= <strong>&lt;single_expression&gt;&lt;others_singles_expressions&gt;</strong><br />
 <strong>&lt;others_singles_expressions&gt;</strong> ::= [<strong>&lt;operators_level_0&gt; &lt;expression&gt;</strong>]<br />
 <strong>&lt;operators_level_0&gt;</strong> ::= &gt; | &lt; | &gt;= | &lt;= | != | ==<br />
 <strong>&lt;single_expression&gt;</strong> ::= <strong>&lt;term&gt; &lt;others_terms&gt;</strong><br />
 <strong>&lt;others_terms&gt;</strong> ::= [<strong>&lt;operators_level_1&gt; &lt;single_expression&gt;</strong>]<br />
 <strong>&lt;operators_level_1&gt;</strong> ::= + | - | &quot;||&quot;<br />
 <strong>&lt;term&gt;</strong> ::= <strong>&lt;factor&gt; &lt;others_factors&gt;</strong><br />
 <strong>&lt;others_factors&gt;</strong> ::= [<strong>&lt;operators_level_2&gt; &lt;term&gt;</strong>]<br />
 <strong>&lt;operators_level_2&gt;</strong> ::= * | / | % | &amp;&amp;<br />
 <strong>&lt;factor&gt;</strong> ::= int_literal | float_literal | <strong>&lt;bool_literal&gt;</strong> | id | ! <strong>&lt;factor&gt;</strong> | <strong>&lt;signo&gt;</strong> <strong>&lt;factor&gt;</strong> | (<strong>&lt;expression&gt;</strong>)<br />
 <strong>&lt;bool_literal&gt;</strong> ::= </span><span class="kyewords">true</span><span class="gramar"> | </span><span class="kyewords">false</span><span class="gramar"><br />
 <strong>&lt;signo&gt;</strong> ::= + | -<br />
 <strong>&lt;if_then_else&gt;</strong> ::= </span><span class="kyewords">if</span><span class="gramar"> <strong>&lt;expression&gt;</strong> </span><span class="kyewords">then</span><span class="gramar"> <strong>&lt;instructions&gt;</strong>[</span><span class="kyewords">else</span><span class="gramar"> <strong>&lt;instructions&gt;</strong>]<br />
 <strong>&lt;instructions&gt;</strong> ::= <strong>&lt;instructions_block&gt; </strong>| <strong>&lt;single_instruction&gt;</strong><br />
 <strong>&lt;while_do&gt; </strong>::= </span><span class="kyewords">while</span><span class="gramar"> <strong>&lt;expression&gt;</strong> </span><span class="kyewords">do</span><span class="gramar"> <strong>&lt;instructions&gt;</strong><br />
                </span>
</body>
